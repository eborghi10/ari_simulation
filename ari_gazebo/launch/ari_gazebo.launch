<?xml version="1.0" encoding="UTF-8"?>

<launch>
  <arg name="world"  default="empty"/>  <!-- empty, ... (see ../worlds) -->
  <arg name="multi" default=""/>
  <arg name="gzpose" default="-x 0.0 -y 0.0 -z 0.0 -R 0.0 -P 0.0 -Y 0.0"/>
  <arg name="gui" default="true"/>
  <arg name="debug" default="false"/>
  <arg name="public_sim" default="false"/>
  <arg name="recording" default="false"/>
  <arg name="extra_gazebo_args" default=""/>
  <!--arg name="use_moveit_camera" default="false"/-->

  <env name="LC_NUMERIC" value="C" />

  <!-- start up world -->
  <include file="$(find pal_gazebo_worlds)/launch/pal_gazebo.launch">
    <arg name="world" value="$(arg world)"/>
    <arg name="gui" value="$(arg gui)"/>
    <arg name="debug" value="$(arg debug)"/>
    <arg name="recording" value="$(arg recording)"/>
    <arg name="extra_gz_model_path" value="$(find ari_gazebo)/models"/>
    <arg name="extra_gz_resource_path" value="$(find ari_gazebo)"/>
    <arg name="extra_gazebo_args" value="$(arg extra_gazebo_args)"/>
  </include>

  <!-- spawn robot in simulation -->
  <include file="$(find ari_gazebo)/launch/ari_spawn.launch">
    <arg name="multi" value="$(arg multi)"/>
    <arg name="gzpose" value="$(arg gzpose)"/>
  </include>

  <!-- bring up robot -->
  <include file="$(find ari_gazebo)/launch/simulation_ari_bringup.launch">
    <arg name="public_sim"  value="$(arg public_sim)"/>
    <!--arg name="use_moveit_camera" value="$(arg use_moveit_camera)"/-->
  </include>

  <!-- point cloud throttle and filter -->
  <group unless="$(arg public_sim)">
    <include file="$(find pal_pcl_points_throttle_and_filter)/launch/throttle_filtering_points.launch">
      <arg name="cloud"  value="/torso_front_camera/depth_registered/points"/>
    </include>
    <!--include file="$(find pal_pcl_points_throttle_and_filter)/launch/throttle_filtering_points.launch">
      <arg name="cloud"  value="/torso_back_camera/depth_registered/points"/>
    </include-->
  </group>

  <node name="image_proc" pkg="image_proc" type="image_proc" ns="torso_front_camera/rgb"/>
  <!--node name="image_proc_back" pkg="image_proc" type="image_proc" ns="torso_back_camera/rgb"/-->
</launch>
